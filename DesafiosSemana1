package DesafiosSemana1;

import java.util.Scanner;

public class Desafio1 {
    public static void main(String[] args) {
        //Faça um algoritmo que leia a idade de uma pessoa expressa em anos, meses e dias e
        //mostre-a expressa em dias. Leve em consideração o ano com 365 dias e o mês com 30.
        //(Ex: 3 anos, 2 meses e 15 dias = 1170 dias.)
        Scanner entrada = new Scanner(System.in);
        System.out.println("Escreva sua idade em anos: ");
        int anos = entrada.nextInt();
        System.out.println("--------------------meses: ");
        int meses = entrada.nextInt();
        System.out.println("---------------------dias: ");
        int dias = entrada.nextInt();
        int total = (anos * 365) + (meses * 30) + dias;
        System.out.printf("Sua idade é: %d dias", total);

        entrada.close();
    }
}

package DesafiosSemana1;

public class Desafio2 {
    public static void main(String[] args) {
        //Fazer um programa que imprima a média aritmética dos números 8,9 e 7. A média dos
        //números 4, 5 e 6. A soma das duas médias. A média das médias.
        double media1 = (9 + 8 + 7) / 3;
        double media2 = (6 + 5 + 4 )/ 3;
        System.out.printf("A media de 9,8 e 7 é: %.2f\n", media1);
        System.out.printf("A media de 6,5 e 4 é: %.2f\n", media2);
        System.out.printf("A soma das duas medias é: %.2f\n", media1 + media2);
        System.out.printf("A media das duas medias é: %.2f\n", (media1 + media2)/2);
    }
}

package DesafiosSemana1;

import java.util.Scanner;

public class Desafio3 {
    public static void main(String[] args) {
        //Informar um saldo e imprimir o saldo com reajuste de 1%.
        Scanner entrada = new Scanner(System.in);
        System.out.println("Informe seu saldo");
        double saldo = entrada.nextDouble();
        double reajuste = saldo * 1.01;
        System.out.printf("O saldo com reajuste é: %.2f", reajuste);
        entrada.close();
    }
}

package DesafiosSemana1;

import java.util.Scanner;

public class Desafio4 {
    public static void main(String[] args) {
        //Crie um algoritmo que leia o valor do salário mínimo e o valor do salário de um usuário,
        //calcule a quantidade de salários mínimos esse usuário ganha e imprima o resultado.
        //(1SM=R$788,00)
        Scanner entrada = new Scanner(System.in);
        System.out.println("Qual o valor do salario minimo?");
        double salarioMinimo = entrada.nextDouble();
        System.out.println("Qual o valor do salario?");
        double salario = entrada.nextDouble();
        System.out.printf("O usuario ganha %.2f salarios minimos", salario/salarioMinimo);
        entrada.close();
    }
}

package DesafiosSemana1;

import java.util.Scanner;

public class Desafio5 {
    public static void main(String[] args) {
        //Desenvolva um algoritmo em Java que leia um número inteiro e imprima o seu
        //antecessor e seu sucessor
        Scanner entrada = new Scanner(System.in);
        System.out.println("Escreva um numero inteiro qualquer");
        int a = entrada.nextInt();
        System.out.printf("O seu antecessor é: %d\n", a - 1);
        System.out.printf("O seu sucessor é: %d\n", a + 1);
        entrada.close();
    }
}

package DesafiosSemana1;

import java.util.Scanner;

public class Desafio6 {
    //6. Escrever um algoritmo que lê:
    //- a porcentagem do IPI a ser acrescido no valor das peças
    //- o código da peça 1, valor unitário da peça 1, quantidade de peças 1
    //- o código da peça 2, valor unitário da peça 2, quantidade de peças 2
    //O algoritmo deve calcular o valor total a ser pago e apresentar o resultado.
    //Fórmula : (valor1 *quant1 + valor2* quant2)*(IPI/100 + 1)
    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);
        System.out.println("Qual a porcetagem do IPI?");
        double IPI = entrada.nextDouble();
        System.out.println("Qual o código da peça 1?");
        String codigo1 = entrada.next();
        System.out.println("Qual o valor da peça 1?");
        double valor1 = entrada.nextDouble();
        System.out.println("Qual a quantidade de peças 1?");
        int quant1 = entrada.nextInt();
        System.out.println("Qual o código da peça 2?");
        String codigo2 = entrada.next();
        System.out.println("Qual o valor da peça 2?");
        double valor2 = entrada.nextDouble();
        System.out.println("Qual a quantidade de peças 2?");
        int quant2 = entrada.nextInt();
        double total = (valor1 *quant1 + valor2* quant2)*(IPI/100 + 1);
        System.out.printf("O valor total a ser pago é R$ %.2f", total);
        entrada.close();
    }
}





